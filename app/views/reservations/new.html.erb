<h1>予約フォーム</h1>

<div class="reservation-container">
  <div class="room-info">
    <h3>部屋情報</h3>
    <p><strong>部屋名:</strong> <%= @room.name %></p>
    <p><strong>料金(1泊/1人):</strong> <%= number_to_currency(@room.price, unit: "¥", precision: 0) %></p>
    <% if @room.image.attached? %>
      <%= image_tag @room.image.variant(resize_to_fill: [200,200]) %>
    <% else %>
      <%= image_tag "room.png", size: "200x200" %>
    <% end %>
  </div>

  <%= render "form", reservation: @reservation %>

  <%= link_to "部屋一覧に戻る", rooms_path, class: "link-button" %>
</div>
