<%= form_with(model: [@room, reservation], local: true, html: { class: "reservation-container" }) do |f| %>
  <% if reservation.errors.any? %>
    <div class="error-messages" style="color:red;">
      <h4><%= pluralize(reservation.errors.count, "件のエラー") %>があります:</h4>
      <ul>
        <% reservation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :start_date, "チェックイン日" %><br>
    <%= f.date_field :start_date, min: Date.today %>
  </div>

  <div>
    <%= f.label :end_date, "チェックアウト日" %><br>
    <%= f.date_field :end_date, min: reservation.start_date || Date.today %>
  </div>

  <div>
    <%= f.label :number_of_people, "宿泊人数" %><br>
    <%= f.number_field :number_of_people, min: 1, value: reservation.number_of_people || 1 %>
  </div>

  <div style="margin-top:20px;">
    <%= f.submit reservation.new_record? ? "予約を確定する" : "予約を更新する" %>
  </div>
<% end %>
