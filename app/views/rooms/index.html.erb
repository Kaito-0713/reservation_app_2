<h1 class="page-title">施設一覧</h1>

<div class="action-bar">
  <%= link_to "新しい施設を登録", new_room_path, class: "btn-primary" %>
</div>

<%= render "search_form" %>

<div class="table-container">
  <table class="styled-table">
    <thead>
      <tr>
        <th>画像</th>
        <th>施設名</th>
        <th>紹介文</th>
        <th>宿泊料金(/日)</th>
        <th>作成日</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td>
            <% if room.image&.attached? %>
              <%= image_tag room.image.variant(resize_to_fill: [100, 100]), class: "thumb" %>
            <% else %>
              <%= image_tag "room.png", size: "100x100", class: "thumb" %>
            <% end %>
          </td>
          <td><%= link_to room.name, room_path(room) %></td>
          <td><%= truncate(room.detail, length: 60) %></td>
          <td><%= number_to_currency(room.price, unit: "¥", precision: 0) %></td>
          <td><%= room.created_at.in_time_zone('Asia/Tokyo').strftime("%Y/%m/%d") %></td>
          <td>
            <%= link_to "編集", edit_room_path(room), class: "btn-link" %> |
            <%= link_to "削除", room, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn-link" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
