<div class="form-container">
  <%= form_with url: search_rooms_path, method: :get, local: true do |f| %>
    <fieldset class="search-box">
      <legend>施設検索</legend>

      <div class="form-field">
        <%= f.label :area, "エリア" %>
        <%= f.select :area, [["東京","東京"], ["大阪","大阪"], ["京都","京都"], ["札幌","札幌"]], include_blank: "指定なし" %>
      </div>

      <div class="form-field">
        <%= f.label :q, "フリーワード" %>
        <%= f.text_field :q, placeholder: "例）温泉 眺望 良い" %>
      </div>

      <%= f.submit "検索する", class: "btn-primary" %>
    </fieldset>
  <% end %>
</div>
