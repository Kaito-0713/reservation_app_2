<div class="form-container">
  <%= form_with(model: room, local: true) do |f| %>
    <% if room.errors.any? %>
      <div class="error-messages">
        <h2><%= pluralize(room.errors.count, "件のエラー") %> が発生しました:</h2>
        <ul>
          <% room.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-field">
      <%= f.label :name, "施設名" %>
      <%= f.text_field :name, required: true %>
    </div>

    <div class="form-field">
      <%= f.label :detail, "施設詳細" %>
      <%= f.text_area :detail, rows: 5, required: true %>
    </div>

    <div class="form-field">
      <%= f.label :price, "宿泊料金（円/日）" %>
      <%= f.number_field :price, min: 1, required: true %>
    </div>

    <div class="form-field">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address, required: true %>
    </div>

    <div class="form-field">
      <%= f.label :image, "施設画像（任意）" %>
      <%= f.file_field :image, accept: "image/*" %>
      <% if room.image&.attached? %>
        <div class="preview"><%= image_tag room.image.variant(resize_to_fill: [120, 120]), class: "thumb" %></div>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.submit "保存する", class: "btn-primary" %>
    </div>
  <% end %>
</div>
