<h2><%= @room.name %></h2>

<div>
  <% if @room.image&.attached? %>
    <%= image_tag @room.image.variant(resize_to_limit: [640, 360]) %>
  <% else %>
    <%= image_tag "room.png", size: "640x360" %>
  <% end %>
</div>

<p><%= simple_format(@room.detail) %></p>
<p>住所: <%= @room.address %></p>
<p>料金: <%= number_to_currency(@room.price, unit: "¥", precision: 0) %>/日</p>

<hr>

<% if user_signed_in? %>
  <%= link_to "この施設を予約する", new_room_reservation_path(@room), class: "btn btn-success" %>
<% else %>
  <p>予約するにはログインしてください。</p>
  <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-primary" %>
<% end %>

<div style="margin-top:12px;">
  <%= link_to "一覧へ戻る", rooms_path %>
</div>
